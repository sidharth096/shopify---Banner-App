{% liquid
  assign bg_color = bgColor | default: '#F2F2F2'
  assign text_color = textColour | default: '#000000'
  assign container_height = container_height | default: 50
  assign text_size = text_size | default: 30
%}

<style>
  .banner-container {
    background-color: {{ bg_color }};
    height: {{ container_height }}px;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    position: relative;
  }

  .banner-title {
    padding: auto;
    color: {{ text_color }};
    font-size: {{ text_size }}px;
    white-space: nowrap;
    animation: move-text 20s linear infinite;
  }

  @keyframes move-text {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }
</style>

<div class="banner-container"> 

    <h1 class="banner-title">Hello everyone</h1>

</div>
